{% if prometheus_node_exporter_group is defined %}
scrape_configs:
  - job_name: node_exporter
    scrape_interval: 15s
    static_configs:
      - targets:
{% for server in groups[prometheus_node_exporter_group] %}
        - {{ server }}:9100
{% endfor %}
{% endif %}

{% if prometheus_proces_exporter_group is defined %}
  - job_name: proces_exporter
    scrape_interval: 15s
    static_configs:
      - targets:
{% for server in groups[prometheus_proces_exporter_group] %}
        - {{ server }}:9100
{% endfor %}
{% endif %}